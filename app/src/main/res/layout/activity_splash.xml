<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.hipla.retail.model.Login_model" />

        <variable
            name="activity"
            type="com.hipla.retail.activity.SplashActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        tools:context="com.example.fnspl.retail_app.activity.SplashActivity">

        <ImageView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m40"
            android:src="@mipmap/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/powerd_by"
            android:textColor="@color/colorGreenlink"
            android:textSize="@dimen/_19ssp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/m20"
            android:layout_marginLeft="@dimen/m5"
            android:layout_marginRight="@dimen/m5"/>

    </RelativeLayout>

</layout>